<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/weather_details_card"
    android:layout_margin="@dimen/_5sdp"
    android:padding="@dimen/_10sdp">
    <ImageView
        android:id="@+id/image_view"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_20sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:tint="@color/black"/>
    <TextView
        android:id="@+id/type_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Feels Like"
        app:layout_constraintTop_toBottomOf="@+id/image_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/_20sdp"/>
    <TextView
        android:id="@+id/unit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25ยบ"
        android:textStyle="bold"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_22sdp"
        app:layout_constraintTop_toBottomOf="@+id/type_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="@dimen/_5sdp"/>
    <TextView
        android:id="@+id/unit_type_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="km"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_16sdp"
        app:layout_constraintBottom_toBottomOf="@+id/unit_tv"
        app:layout_constraintStart_toEndOf="@+id/unit_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"/>

</androidx.constraintlayout.widget.ConstraintLayout>